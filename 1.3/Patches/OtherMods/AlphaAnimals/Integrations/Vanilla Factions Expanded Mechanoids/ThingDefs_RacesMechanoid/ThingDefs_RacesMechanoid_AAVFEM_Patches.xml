<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="ScavengingExpansion.PatchOperations.PatchOperationFindAllMods">
        <mods>
            <li>Alpha Animals</li>
            <li>Vanilla Factions Expanded - Mechanoids</li>
        </mods>
        
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[defName="VFE_Mech_Advanced_Aura"]</xpath>
                    <value>
                        <li Class="ScavengingExpansion.Defs.DefModExtensions.ScavengingYield">
                            <scrapYield>30</scrapYield>
                            <advancedYield>
                                <li>
                                    <defRef>SE_DominionCrown_Resource</defRef>
                                    <chance>0.05</chance>
                                </li>
                            </advancedYield>
                        </li>
                    </value>
                </li>
            </operations>    
        </match>
    </Operation>
</Patch>