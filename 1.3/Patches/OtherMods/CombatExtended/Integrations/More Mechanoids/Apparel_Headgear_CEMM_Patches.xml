<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="ScavengingExpansion.PatchOperations.PatchOperationFindAllMods">
        <mods>
            <li>Combat Extended</li>
            <li>More Mechanoids</li>
        </mods>

        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="SE_MammothHelmet"]/statBases</xpath>
                    <value>
                        <Bulk>7</Bulk>
                        <WornBulk>2</WornBulk>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="SE_MammothHelmet"]/statBases/Mass</xpath>
                    <value>
                        <Mass>7</Mass>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="SE_MammothHelmet"]/statBases/ArmorRating_Sharp</xpath>
                    <value>
                        <ArmorRating_Sharp>14</ArmorRating_Sharp>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="SE_MammothHelmet"]/statBases/ArmorRating_Blunt</xpath>
                    <value>
                        <ArmorRating_Blunt>45</ArmorRating_Blunt>
                    </value>
                </li>

                <li Class="PatchOperationRemove">
                    <xpath>Defs/ThingDef[defName="SE_MammothHelmet"]/equippedStatOffsets/ShootingAccuracyPawn</xpath>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="SE_MammothHelmet"]/equippedStatOffsets</xpath>
                    <value>
                        <AimingAccuracy>-0.10</AimingAccuracy>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="SE_MammothHelmet"]/apparel/layers</xpath>
                    <value>
                        <li>OnHead</li>
                        <li>StrappedHead</li>
                        <li>MiddleHead</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>                