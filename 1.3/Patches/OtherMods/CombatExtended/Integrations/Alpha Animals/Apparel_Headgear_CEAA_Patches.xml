<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation Class="ScavengingExpansion.PatchOperations.PatchOperationFindAllMods">
        <mods>
            <li>Combat Extended</li>
            <li>Alpha Animals</li>
        </mods>

        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="SE_DominionCrownHelmet"]/statBases</xpath>
                    <value>
                        <Bulk>5</Bulk>
                        <WornBulk>1</WornBulk>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="SE_DominionCrownHelmet"]/statBases/ArmorRating_Sharp</xpath>
                    <value>
                        <ArmorRating_Sharp>12</ArmorRating_Sharp>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="SE_DominionCrownHelmet"]/statBases/ArmorRating_Blunt</xpath>
                    <value>
                        <ArmorRating_Blunt>30</ArmorRating_Blunt>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="SE_DominionCrownHelmet"]/apparel/layers</xpath>
                    <value>
                        <li>OnHead</li>
                        <li>StrappedHead</li>
                        <li>MiddleHead</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>                