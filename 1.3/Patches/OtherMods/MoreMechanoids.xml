<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <Operation class="PatchOperationFindMod">
        <mods>
            <li>More Mechanoids</li>
        </mods>

        <match Class="PatchOperationSequence">
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/ThingDef[defName="Mech_Mammoth"]</xpath>
                <value>
                    <li Class="ScavengingExpansion.Defs.DefModExtensions.ScavengingYield">
                        <scrapYield>50</scrapYield>
                        <advancedYield>
                            <li>
                                <defRef>SE_MammothPlate</defRef>
                                <count>1</count>
                                <chance>0.15</chance>
                            </li>
                        </advancedYield>
                    </li>
                </value>
            </li>
        </match>
    </Operation>
</Patch>