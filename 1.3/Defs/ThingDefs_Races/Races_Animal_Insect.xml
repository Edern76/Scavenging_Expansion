<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <!-- ==== HOARDER ==== -->
    <ThingDef ParentName="BaseInsect">
        <defName>SE_InsectHoarder</defName>
        <label>hoarder</label>
        <description>A rare insectoid often seen roaming inside the darkest caves of the rim, he use his powerful claws to dig out minerals and treasures then stock them inside his big green bulb.</description>
        <!-- TODO : Replace temp stats from megaspider by actual stats -->
        <statBases>
            <MoveSpeed>3.60</MoveSpeed>
            <ComfyTemperatureMin>-40</ComfyTemperatureMin>
            <MarketValue>500</MarketValue>
            <LeatherAmount>0</LeatherAmount>
            <ArmorRating_Blunt>0.18</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.27</ArmorRating_Sharp>
        </statBases>
        <uiIconScale>1.15</uiIconScale>
        <tools>
          <li>
              <label>head claw</label>
              <capacities>
              <li>Cut</li>
              </capacities>
              <power>12</power>
              <cooldownTime>2.6</cooldownTime>
              <linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
          </li>
          <li>
              <label>head</label>
              <capacities>
              <li>Blunt</li>
              </capacities>
              <power>7</power>
              <cooldownTime>2</cooldownTime>
              <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
              <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
              <chanceFactor>0.2</chanceFactor>
          </li>
        </tools>
        <race>
          <body>BeetleLikeWithClaw</body>
          <baseHungerRate>0.35</baseHungerRate>
          <baseBodySize>1.2</baseBodySize>
          <baseHealthScale>2.5</baseHealthScale>
          <gestationPeriodDays>6</gestationPeriodDays>
          <meatLabel>insect meat</meatLabel>
          <lifeExpectancy>6</lifeExpectancy>
          <wildness>1</wildness>
          <lifeStageAges>
              <li>
                <def>EusocialInsectLarva</def>
                <minAge>0</minAge>
              </li>
              <li>
                <def>EusocialInsectJuvenile</def>
                <minAge>0.03</minAge>
              </li>
              <li>
                <def>EusocialInsectAdult</def>
                <minAge>0.2</minAge>
                <soundWounded>Pawn_BigInsect_Pain</soundWounded>
                <soundDeath>Pawn_BigInsect_Death</soundDeath>
                <soundCall>Pawn_BigInsect_Call</soundCall>
                <soundAngry>Pawn_BigInsect_Angry</soundAngry>
              </li>
          </lifeStageAges>
          <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
          <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
          <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
          <li>AnimalInsect</li>
        </tradeTags>
        <modExtensions>
          <li Class="ScavengingExpansion.Defs.DefModExtensions.ScavengingYield">
            <advancedYield>
              <li>
                  <defRef>Plasteel</defRef>
                  <chance>0.5</chance>
                  <minAmount>10</minAmount>
                  <maxAmount>40</maxAmount>
              </li>
              <li>
                <defRef>Plasteel</defRef>
                <chance>0.05</chance>
                <minAmount>40</minAmount>
                <maxAmount>80</maxAmount>
              </li>
              <li>
                <defRef>Gold</defRef>
                <chance>0.5</chance>
                <minAmount>10</minAmount>
                <maxAmount>40</maxAmount>
              </li>
              <li>
                <defRef>Gold</defRef>
                <chance>0.05</chance>
                <minAmount>40</minAmount>
                <maxAmount>80</maxAmount>
              </li>
              <li>
                <defRef>Jade</defRef>
                <chance>0.5</chance>
                <minAmount>10</minAmount>
                <maxAmount>40</maxAmount>
              </li>
              <li>
                <defRef>Jade</defRef>
                <chance>0.05</chance>
                <minAmount>40</minAmount>
                <maxAmount>80</maxAmount>
              </li>
              <li>
                <defRef>ComponentIndustrial</defRef>
                <chance>0.5</chance>
                <minAmount>5</minAmount>
                <maxAmount>20</maxAmount>
              </li>
              <li>
                <defRef>ComponentIndustrial</defRef>
                <chance>0.025</chance>
                <minAmount>20</minAmount>
                <maxAmount>35</maxAmount>
              </li>
              <li>
                <defRef>Steel</defRef>
                <chance>0.5</chance>
                <minAmount>50</minAmount>
                <maxAmount>200</maxAmount>
              </li>
            </advancedYield>
          </li>
        </modExtensions>
    </ThingDef>

