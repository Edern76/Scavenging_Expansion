	<RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
  	<defName>InstallSE_UnstableHealthCore</defName>
  	<label>install unstable health core</label>
  	<description>Install a unstable health core.</description>
  	<descriptionHyperlinks>
   		<ThingDef>SE_UnstableHealthCore</ThingDef>
     		<HediffDef>SE_UnstableHealthCore</HediffDef>
    </descriptionHyperlinks>
  	<jobString>Installing unstable health core.</jobString>
    <skillRequirements>
      <Medicine>14</Medicine>
    </skillRequirements>
  	<ingredients>
     		<li>
       		<filter>
        		<thingDefs>
           	<li>SE_UnstableHealthCore</li>
        		</thingDefs>
      		</filter>
       		<count>1</count>
    		</li>
  	</ingredients>
  	<fixedIngredientFilter>
   		<thingDefs>
      	<li>SE_UnstableHealthCore</li>
  		</thingDefs>
  	</fixedIngredientFilter>
  	<appliedOnFixedBodyParts>
   		<li>Heart</li>
  	</appliedOnFixedBodyParts>
   	<addsHediff>SE_UnstableHealthCore</addsHediff>
	</RecipeDef>

