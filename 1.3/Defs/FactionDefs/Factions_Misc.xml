<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <FactionDef ParentName="FactionBase" Name="SE_ScavengerBase" Abstract="True">
    <pawnSingular>scavenger</pawnSingular>
    <pawnsPlural>scavengers</pawnsPlural>
    <categoryTag>SE_Scavengers</categoryTag>
    <listOrderPriority>20</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canStageAttacks>true</canStageAttacks>
    <factionIconPath>World/WorldObjects/ScavengerFaction/ScavFactionIcon</factionIconPath>
    <geneticVariance>0.1</geneticVariance>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <techLevel>Spacer</techLevel>
    <allowedCultures>
      <li>Kriminul</li>
    </allowedCultures>
    <structureMemeWeights>
      <Structure_TheistEmbodied MayRequire="Ludeon.RimWorld.Ideology">1</Structure_TheistEmbodied>
      <Structure_TheistAbstract MayRequire="Ludeon.RimWorld.Ideology">3</Structure_TheistAbstract>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
      <Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Archist>
      <Structure_OriginChristian MayRequire="Ludeon.RimWorld.Ideology">1</Structure_OriginChristian>
      <Structure_OriginIslamic MayRequire="Ludeon.RimWorld.Ideology">0</Structure_OriginIslamic>
      <Structure_OriginHindu MayRequire="Ludeon.RimWorld.Ideology">0</Structure_OriginHindu>
      <Structure_OriginBuddhist MayRequire="Ludeon.RimWorld.Ideology">0</Structure_OriginBuddhist>
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>Spacer</li>
        </categories>
      </li>
    </backstoryFilters>
    <leaderTitle>lord</leaderTitle>
    <caravanTraderKinds>
      <li>Caravan_Neolithic_BulkGoods</li>
      <li>Caravan_Neolithic_WarMerchant</li>
      <li>Caravan_Neolithic_Slaver</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Neolithic_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Neolithic_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-55~25</allowedArrivalTemperatureRange>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 1)</li>
        <!--Constant 1 at all points levels-->
      </points>
    </raidCommonalityFromPointsCurve>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(800, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <settlementTexturePath>World/ScavengerFaction/ScavCamp</settlementTexturePath>
  </FactionDef>

  <FactionDef ParentName="SE_ScavengerBase">
    <defName>SE_Scavengers</defName>
    <label>scavenger clan</label>
    <description>Placeholder.</description>
    <colorSpectrum>
      <li>(0.30, 0.58, 0.65)</li>
      <li>(0.35, 0.75, 0.70)</li>
    </colorSpectrum>
    <factionIconPath></factionIconPath>
    <permanentEnemy>false</permanentEnemy>
    <pawnGroupMakers>
      <li>
        <!-- Peaceful -->
        <kindDef>Peaceful</kindDef>
        <options>
          <SE_Scavenger>30</SE_Scavenger>
          <SE_Swarmer>20</SE_Swarmer>
          <SE_Shellpiercer>15</SE_Shellpiercer>
          <SE_LordScavenger>1</SE_LordScavenger>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <SE_ScavTrafficker>1</SE_ScavTrafficker>
        </traders>
        <carriers>
          <Muffalo>8</Muffalo>
          <Yak>4</Yak>
          <Alpaca>2.5</Alpaca>
        </carriers>
        <guards>
          <SE_Scavenger>25</SE_Scavenger>
          <SE_Swarmer>20</SE_Swarmer>
          <SE_Shellpiercer>15</SE_Shellpiercer>
          <SE_Mech_Amalgam>5</SE_Mech_Amalgam>
          <SE_LordScavenger>1</SE_LordScavenger>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <SE_Scavenger>25</SE_Scavenger>
          <SE_Swarmer>20</SE_Swarmer>
          <SE_Shellpiercer>15</SE_Shellpiercer>
          <SE_Mech_Amalgam>5</SE_Mech_Amalgam>
          <SE_LordScavenger>1</SE_LordScavenger>
        </options>
      </li>
      <li>
        <!-- Normal fights, ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>80</commonality>
        <options>
          <SE_Scavenger>25</SE_Scavenger>
          <SE_Swarmer>20</SE_Swarmer>
          <SE_Shellpiercer>15</SE_Shellpiercer>
          <SE_Mech_Amalgam>10</SE_Mech_Amalgam>
        </options>
      </li>
      <li>
        <!-- Normal fights, raiders -->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <SE_Scavenger>25</SE_Scavenger>
          <SE_Swarmer>20</SE_Swarmer>
          <SE_Shellpiercer>15</SE_Shellpiercer>
          <SE_Mech_Amalgam>5</SE_Mech_Amalgam>
          <SE_LordScavenger>1</SE_LordScavenger>
        </options>
      </li>
      <li>
        <!-- Normal fights, ranged only -->
        <kindDef>Combat</kindDef>
        <commonality>30</commonality>
        <options>
          <SE_Scavenger>60</SE_Scavenger>
          <SE_Mech_Amalgam>1</SE_Mech_Amalgam>
        </options>
      </li>
      <li>
        <!-- Normal fights, mechanoid only -->
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
            <SE_Mech_Amalgam>100</SE_Mech_Amalgam>
        </options>
      </li>
    </pawnGroupMakers>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>100</configurationListOrderPriority>
  </FactionDef>
</Defs>